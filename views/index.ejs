<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Chats</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 flex flex-col items-center p-8">

    <!-- New Chat Button -->
    <div class="mb-6">
        <form method="GET" action="/chats/new">
            <button type="submit"
                class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out">
                New Chat
            </button>
        </form>
    </div>

    <!-- Page Title -->
    <h1 class="text-3xl font-extrabold text-gray-800 mb-8">All Chats</h1>

    <!-- Chat Container -->
    <div class="space-y-6 w-full max-w-4xl">
        <% for (let chat of chats) { %>
            <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200">
                <p class="text-lg font-medium text-gray-800 mb-2">From: <%= chat.from %></p>
                <h2 class="text-xl font-semibold text-gray-700 mb-2">Messages:</h2>
                <p class="text-gray-600 mb-4"><%= chat.msg %></p>

                <!-- Edit and Delete Buttons -->
                <div class="flex space-x-4">
                    <!-- Edit Button -->
                    <form method="GET" action="/chats/<%= chat._id %>/edit">
                        <button type="submit"
                            class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out">
                            Edit
                        </button>
                    </form>

                    <!-- Delete Button -->
                    <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                        <button type="submit"
                            class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out">
                            Delete
                        </button>
                    </form>
                </div>

                <!-- Recipient and Timestamp -->
                <p class="text-gray-700 mt-4">Received by: <%= chat.to %></p>
                <p class="text-gray-500 text-sm"><%= chat.created_at %></p>
            </div>
        <% } %>
    </div>

</body>

</html>
